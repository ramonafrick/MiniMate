@page "/calendar"
@using MiniMate.Modules.Weather.Application.Contracts
@using MiniMate.Modules.Weather.Domain
@using MiniMate.Modules.Calendar.Resources
@using MiniMate.Modules.Calendar.UI.Components
@using MiniMate.Profile.Contracts
@using Microsoft.Extensions.Localization
@inject IWeatherService weatherService
@inject IProfileService profileService
@inject IStringLocalizer<CalendarResources> Localizer

<PageTitle>@Localizer["PageTitle"]</PageTitle>

<div class="calendar-page">
    <h2 class="page-title">@Localizer["CalendarTitle"]</h2>

    @if (WeatherData != null)
    {
        <DateTimeComponent WeatherData="@WeatherData" />
    }
    else if (IsLoading)
    {
        <div class="loading">
            <div class="spinner"></div>
            <p>@Localizer["Loading"]</p>
        </div>
    }
    else if (!string.IsNullOrEmpty(ErrorMessageKey))
    {
        <div class="info-message">
            <p>@Localizer[ErrorMessageKey]</p>
        </div>
    }
</div>

