@using MiniMate.Weather.Contracts
@using Microsoft.Extensions.Localization
@using MiniMate.Weather.Resources
@inject IWeatherService weatherService

<div class="weather-container">
    <h1 class="page-title">@Localizer["CurrentWeather"]</h1>

    <LocationSearchComponent OnLocationSelected="HandleLocationSelected" />

    @if (IsLoading)
    {
        <div class="loading">
            <div class="spinner"></div>
            <p>@Localizer["LoadingWeatherData"]</p>
        </div>
    }
    else if (WeatherData != null)
    {
        <div class="weather-display">
            <div class="main-weather">
                <div class="weather-icon">@WeatherData.WeatherIcon</div>
                <div class="temperature-section">
                    <div class="current-temp">@WeatherData.Temperature</div>
                    <div class="feels-like">@Localizer["FeelsLike", WeatherData.ApparentTemperature]</div>
                    <div class="description">@WeatherData.WeatherDescription</div>
                </div>
            </div>

            <div class="weather-grid">
                @if (SelectedLocation != null)
                {
                    <div class="weather-card location-card">
                        <span class="card-icon">📍</span>
                        <div class="card-content">
                            <div class="card-label">@Localizer["Location"]</div>
                            <div class="card-value">@SelectedLocation.DisplayName</div>
                        </div>
                    </div>
                }
                <div class="weather-card">
                    <div class="card-icon">💧</div>
                    <div class="card-content">
                        <div class="card-label">@Localizer["Humidity"]</div>
                        <div class="card-value">@WeatherData.Humidity</div>
                    </div>
                </div>

                <div class="weather-card">
                    <div class="card-icon">🌧️</div>
                    <div class="card-content">
                        <div class="card-label">@Localizer["Precipitation"]</div>
                        <div class="card-value">@WeatherData.Precipitation</div>
                    </div>
                </div>

                @if (WeatherData.Current.Rain > 0)
                {
                    <div class="weather-card">
                        <div class="card-icon">☔</div>
                        <div class="card-content">
                            <div class="card-label">@Localizer["Rain"]</div>
                            <div class="card-value">@WeatherData.Rain</div>
                        </div>
                    </div>
                }

                @if (WeatherData.Current.Snowfall > 0)
                {
                    <div class="weather-card">
                        <div class="card-icon">❄️</div>
                        <div class="card-content">
                            <div class="card-label">@Localizer["Snowfall"]</div>
                            <div class="card-value">@WeatherData.Snowfall</div>
                        </div>
                    </div>
                }

                <div class="weather-card">
                    <div class="card-icon">💨</div>
                    <div class="card-content">
                        <div class="card-label">@Localizer["Wind"]</div>
                        <div class="card-value">@WeatherData.WindSpeed @WeatherData.WindDirection</div>
                    </div>
                </div>

                @if (WeatherData.Current.WindGusts > WeatherData.Current.WindSpeed * 1.2)
                {
                    <div class="weather-card">
                        <div class="card-icon">🌪️</div>
                        <div class="card-content">
                            <div class="card-label">@Localizer["WindGusts"]</div>
                            <div class="card-value">@WeatherData.WindGusts</div>
                        </div>
                    </div>
                }

                <div class="weather-card">
                    <div class="card-icon">☁️</div>
                    <div class="card-content">
                        <div class="card-label">@Localizer["CloudCover"]</div>
                        <div class="card-value">@WeatherData.CloudCover</div>
                    </div>
                </div>

                <div class="weather-card">
                    <div class="card-icon">🔆</div>
                    <div class="card-content">
                        <div class="card-label">@Localizer["UVIndex"]</div>
                        <div class="card-value">@WeatherData.UvIndex</div>
                    </div>
                </div>

                <div class="weather-card">
                    <div class="card-icon">📊</div>
                    <div class="card-content">
                        <div class="card-label">@Localizer["Pressure"]</div>
                        <div class="card-value">@WeatherData.Pressure</div>
                    </div>
                </div>

                <div class="weather-card">
                    <div class="card-icon">👁️</div>
                    <div class="card-content">
                        <div class="card-label">@Localizer["Visibility"]</div>
                        <div class="card-value">@WeatherData.Visibility</div>
                    </div>
                </div>
            </div>

            <div class="weather-info-notice">
                <span class="info-icon">ℹ️</span>
                <span>@Localizer["WeatherWarningNotice"]</span>
            </div>

            <div class="last-updated">
                @Localizer["LastUpdated", WeatherData.LastUpdateTime.ToString("dd.MM.yyyy HH:mm")]
            </div>
        </div>

        <WeatherAvatarComponent WeatherData="@WeatherData" />
    }

    @if (SelectedLocation != null)
    {
        <DailyForcastComponent Latitude="@SelectedLocation.Latitude" Longitude="@SelectedLocation.Longitude" />
        <WeeklyForcastComponent Latitude="@SelectedLocation.Latitude" Longitude="@SelectedLocation.Longitude" />
    }

    @if (ErrorMessage != null)
    {
        <div class="error-message">
            <div class="error-icon">⚠️</div>
            <div class="error-text">@ErrorMessage</div>
            <button class="btn btn-warning" @onclick="RetryWeatherLoad">@Localizer["RetryButton"]</button>
        </div>
    }
</div>