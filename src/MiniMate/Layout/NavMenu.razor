@using MiniMate.Layout.Resources
@using Microsoft.Extensions.Localization
@using Microsoft.AspNetCore.Components
@inject IStringLocalizer<NavigationResources> Localizer

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="" @onclick="HandleNavClick">
            <img src="favicon.svg" alt="MiniMate" class="navbar-brand-icon" />
            MiniMate
        </a>
    </div>
</div>

<div class="nav-scrollable">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All" @onclick="HandleNavClick">
                <span class="material-symbols-outlined" aria-hidden="true">home</span> @Localizer["Home"]
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="calendar" @onclick="HandleNavClick">
                <span class="material-symbols-outlined" aria-hidden="true">calendar_month</span> @Localizer["Calendar"]
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="wheater-today" @onclick="HandleNavClick">
                <span class="material-symbols-outlined" aria-hidden="true">wb_sunny</span> @Localizer["TodaysWeather"]
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="profile" @onclick="HandleNavClick">
                <span class="material-symbols-outlined" aria-hidden="true">person</span> @Localizer["Profile"]
            </NavLink>
        </div>
    </nav>
</div>

@code {
    [Parameter]
    public EventCallback OnNavLinkClick { get; set; }

    private async Task HandleNavClick()
    {
        if (OnNavLinkClick.HasDelegate)
        {
            await OnNavLinkClick.InvokeAsync();
        }
    }
}
